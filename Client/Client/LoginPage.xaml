<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.LoginPage"
             Title="Login Page">

    <StackLayout Padding="70">

        <Label Text="Welcome" HorizontalOptions="Center" FontSize="Large"/>
        <Entry x:Name="usernameEntry" Placeholder="Enter username"/>
        <Entry x:Name="passwordEntry" Placeholder="Enter password" IsPassword="True" Completed="passwordEntry_Completed"/>
        <Button Text="Sign In" Clicked="Button_Clicked"/>

        <Button x:Name="buttonToRegister" Padding="20" Text="No account? Register here" Clicked="buttonToRegister_Clicked"/>


    </StackLayout>

</ContentPage>